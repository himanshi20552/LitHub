<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0325">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/lithub_logo" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logistic Regression"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Questions -->
        <!-- Repeat block for each question -->
        <!-- QUESTION 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. What does logistic regression output?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <RadioGroup android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q1_a" android:text="A) A continuous number" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q1_b" android:text="B) A probability between 0 and 1" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q1_c" android:text="C) A cluster assignment" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q1_d" android:text="D) A vector" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. What is a logit?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q2"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q2_a" android:text="A) Log of the input" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q2_b" android:text="B) Logarithm of the odds" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q2_c" android:text="C) Logarithm of the features" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q2_d" android:text="D) Log of error" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. What function ensures output stays between 0 and 1?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q3"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q3_a" android:text="A) ReLU" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q3_b" android:text="B) Tanh" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q3_c" android:text="C) Softmax" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q3_d" android:text="D) Sigmoid" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Why is MSE not used in logistic regression?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q4"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q4_a" android:text="A) It's too complex" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q4_b" android:text="B) It's not differentiable" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q4_c" android:text="C) It creates a non-convex cost function" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q4_d" android:text="D) It uses incorrect assumptions" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. What is the appropriate cost function in logistic regression?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q5"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q5_a" android:text="A) MSE" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q5_b" android:text="B) Cross-entropy" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q5_c" android:text="C) Hinge loss" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q5_d" android:text="D) Euclidean loss" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 6 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. What does the threshold in logistic regression determine?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q6"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q6_a" android:text="A) Cost" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <RadioButton android:id="@+id/q6_b" android:text="B) Optimization rate" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q6_c" android:text="C) Class prediction" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q6_d" android:text="D) Model complexity" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 7 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. What method is typically used to optimize logistic regression parameters?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q7"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q7_a" android:text="A) LDA" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q7_b" android:text="B) Convex paraboloid" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q7_c" android:text="C) Gradient Descent" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q7_d" android:text="D) K-means" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 8 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.
What does the softmax function do in multi-class classification?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q8"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q8_a" android:text="A) Reduces error" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q8_b" android:text="B) Converts outputs to binary" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q8_c" android:text="C) Normalizes outputs to a probability distribution" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q8_d" android:text="D) Applies a linear transformation" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 9 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9. Which of the following is not an advantage of logistic regression?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q9"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q9_a" android:text="A) Works with ordinal data" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q9_b" android:text="B) Models non-linear boundaries" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q9_c" android:text="C) Provides interpretable coefficients" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q9_d" android:text="D) Does not assume feature distribution" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 10 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What does the odds ratio describe?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q10_a" android:text="A) Percentage of correct predictions" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q10_b" android:text="B) Ratio of probabilities of two outcomes" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q10_c" android:text="C) Cost function derivative" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q10_d" android:text="D) Input feature scale" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>
</ScrollView>
