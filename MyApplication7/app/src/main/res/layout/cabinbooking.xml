<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0325">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_menu" />

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/lithub_logo"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Search Bar -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:hint="  Search by title, author, or subject"
                android:drawableStart="@drawable/ic_search"
                android:background="@drawable/search_bg"
                android:paddingStart="16dp"
                android:textColorHint="#CCCCCC"
                android:textColor="#FFFFFF" />


            <!-- Toggle Buttons -->
            <RadioGroup
                android:id="@+id/toggle_group"
                android:layout_below="@id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/toggle_bg"
                android:padding="4dp">

                <RadioButton
                    android:id="@+id/cabin_booking"
                    style="@style/ToggleTab"
                    android:text="Cabin Booking"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/virtual_groups"
                    style="@style/ToggleTab"
                    android:text="Virtual Groups" />
            </RadioGroup>

            <!-- Section Title -->
            <TextView
                android:id="@+id/title"
                android:layout_below="@id/toggle_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Cabins"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Cabin List -->
            <ScrollView
                android:layout_below="@id/title"
                android:layout_above="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/cabin_list"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Repeat this block for each cabin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cabin"
                            android:layout_marginEnd="12dp"
                            app:tint="#FFFFFF" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Cabin 1"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Capacity: 4 people"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Book Cabin"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:textColor="#C5BFFF"
                            android:background="@drawable/btn_outline" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cabin"
                            android:layout_marginEnd="12dp"
                            app:tint="#FFFFFF" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Cabin 1"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="Capacity: 4 people"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Book Cabin"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:textColor="#C5BFFF"
                            android:background="@drawable/btn_outline" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_cabin"
                            android:layout_marginEnd="12dp"
                            app:tint="#FFFFFF" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Cabin 1"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Capacity: 4 people"
                                android:textColor="#AAAAAA"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Book Cabin"
                            android:textSize="12sp"
                            android:paddingHorizontal="12dp"
                            android:textColor="#C5BFFF"
                            android:background="@drawable/btn_outline" />
                    </LinearLayout>


                    <!-- Copy above block for Cabin 2 - Cabin 8 -->
                </LinearLayout>
            </ScrollView>




        </LinearLayout>

    </ScrollView>


    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/nav_bg">

        <!-- Each nav icon -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_book"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:text="Resources"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_groupstudy"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:text="Group Study"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_collaborate"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:text="Collaborate"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_practice"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:text="Practice"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </LinearLayout>
        <!-- Repeat for other nav items like Group Study, Collaborate, Practice -->
        <!-- ... -->
    </LinearLayout>

</RelativeLayout>