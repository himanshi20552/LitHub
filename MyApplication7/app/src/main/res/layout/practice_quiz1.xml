<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0325">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/lithub_logo" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gradient Descent and Linear Regression"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            />

        <!-- Questions -->
        <!-- Repeat block for each question -->
        <!-- QUESTION 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. What is the primary goal of regression modeling?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            />

        <RadioGroup android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q1_a" android:text="A) Classifying data points" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q1_b" android:text="B) Estimating and predicting continuous numeric variables" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q1_c" android:text="C) Measuring correlation" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q1_d" android:text="D) Optimizing clustering algorithms" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. What kind of relationship is assumed in linear regression?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q2"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q2_a" android:text="A) Non-linear" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q2_b" android:text="B) Exponential" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q2_c" android:text="C) Logistic" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q2_d" android:text="D) Linear" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. What does the 'least squares error' method minimize?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q3"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q3_a" android:text="A) The average of residuals" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q3_b" android:text="B) The absolute error" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q3_c" android:text="C) The sum of squared differences between predicted and actual values" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q3_d" android:text="D) The number of iterations" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Which of the following is a dependent variable in regression?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q4"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q4_a" android:text="A) Predictor" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q4_b" android:text="B) Response" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q4_c" android:text="C) Input" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q4_d" android:text="D) Feature" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. What is the deterministic component in a regression model?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q5"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q5_a" android:text="A) Noise" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q5_b" android:text="B) Estimated error" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q5_c" android:text="C) The functional relationship between X and Y" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q5_d" android:text="D) Data normalization" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 6 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Why is a probability distribution assigned to the error term?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q6"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q6_a" android:text="A) To reduce complexity" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <RadioButton android:id="@+id/q6_b" android:text="B) To quantify model variance" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q6_c" android:text="C) To generate random data" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q6_d" android:text="D) To increase accuracy" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 7 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. What shape is the cost function J(θ) in linear regression?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q7"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q7_a" android:text="A) Flat" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q7_b" android:text="B) Convex paraboloid" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q7_c" android:text="C) Sinusoidal" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q7_d" android:text="D) Exponential curve" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 8 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8. What is the purpose of gradient descent?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q8"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q8_a" android:text="A) Maximize accuracy" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q8_b" android:text="B) Minimize error using iterative updates" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q8_c" android:text="C) Transform variables" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q8_d" android:text="D) Scale data" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 9 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9. What part of the model is updated during gradient descent?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q9"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q9_a" android:text="A) X values" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q9_b" android:text="B) Cost function" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q9_c" android:text="C) Model parameters (θ)" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q9_d" android:text="D) Error variance" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- QUESTION 10 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10. Which of the following is not a regression modeling step?"
            android:textColor="#FFFFFF" android:textSize="16sp" android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q10_a" android:text="A) Estimate standard deviation of error" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q10_b" android:text="B) Hypothesize deterministic component" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q10_c" android:text="C) Perform PCA" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q10_d" android:text="D) Use model for prediction" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>
</ScrollView>
