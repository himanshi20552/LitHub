<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0325">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/lithub_logo" />
        </LinearLayout>

        <!-- Existing 10 Logistic Regression Questions (Already Present Above) -->

        <!-- SVM Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support Vector Machines (SVMs)"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- SVM Q1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. What is the key objective of SVM in classification?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q11"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q11_a" android:text="A) Minimize training time" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q11_b" android:text="B) Maximize margin between classes" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q11_c" android:text="C) Minimize number of features" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q11_d" android:text="D) Generate decision trees" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. What are support vectors?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q12"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q12_a" android:text="A) Outliers" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q12_b" android:text="B) Features with the largest weights" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q12_c" android:text="C) Data points closest to the decision boundary" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q12_d" android:text="D) Random data points" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. What does a soft margin allow?"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q13"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q13_a" android:text="A) High accuracy" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q13_b" android:text="B) Some misclassification" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q13_c" android:text="C) More features" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q13_d" android:text="D) Faster predictions" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. What kind of optimization problem does SVM solve?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q14"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q14_a" android:text="A) Minimization of distance" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q14_b" android:text="B) Linear regression" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q14_c" android:text="C) Maximization of margin" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q14_d" android:text="D) PCA" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. What is the general equation for a linear decision boundary in SVM?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q15"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q15_a" android:text="A) x+b=1" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q15_b" android:text="B) y=ax+b" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q15_c" android:text="C) x+b=0" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q15_d" android:text="D) log(x)+b=y" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q6 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. What role does the kernel trick play in SVM?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q16"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q16_a" android:text="A) Reduces features" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q16_b" android:text="B) Transforms data to higher dimensions" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q16_c" android:text="C) Normalizes data" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q16_d" android:text="D) Binarizes output" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q7 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. What is the margin in SVM?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q17"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q17_a" android:text="A) Distance between features" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q17_b" android:text="B) Width between two hyperplanes nearest to data points" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q17_c" android:text="C) Range of output values" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q17_d" android:text="D) Distance between means" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q8 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8. Which of these is not a type of kernel used in SVMs?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q18"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q18_a" android:text="A) Linear" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q18_b" android:text="B) Polynomial" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q18_c" android:text="C) Radial Basis Function (RBF)" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q18_d" android:text="D) Fourier" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q9 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9. What happens when λ is set to infinity in SVM?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q19"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q19_a" android:text="A) Results in maximum margin" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q19_b" android:text="B) Produces a soft margin" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q19_c" android:text="C) Ignores errors completely" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q19_d" android:text="D) Results in a hard margin" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- SVM Q10 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10. Why might SVMs generalize poorly with limited data diversity?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>
        <RadioGroup android:id="@+id/q20"
            android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q20_a" android:text="A) They overfit the margin" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q20_b" android:text="B) The kernel becomes unstable" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q20_c" android:text="C) The decision boundary over-relies on support vectors" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q20_d" android:text="D) Visualization becomes difficult" android:textColor="#FFFFFF" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>
</ScrollView>
